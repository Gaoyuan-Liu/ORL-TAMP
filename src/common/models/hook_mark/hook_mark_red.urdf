<?xml version="0.0" ?>
<robot name="hook">
  <link name="handle_bar">
    <contact>
      <lateral_friction value="1"/>
      <rolling_friction value="0.0"/>
      <contact_cfm value="0.0"/>
      <contact_erp value="1.0"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
       <mass value=".05"/>
       <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.1 0.02 0.04"/>
      </geometry>
      <material name="long_bar_texture">
        <color rgba="1. 0. 0. 0.5" />
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.1 0.02 0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="hook_joint1" type="fixed">
    <!-- <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-1.7628" soft_upper_limit="1.7628"/> -->
    <origin rpy="0 0 0" xyz="0.25 0.0 0.0"/>
    <parent link="handle_bar"/>
    <child link="long_bar"/>
  </joint>



  <link name="long_bar">
    <contact>
      <lateral_friction value="1"/>
      <rolling_friction value="0.0"/>
      <contact_cfm value="0.0"/>
      <contact_erp value="1.0"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
       <mass value=".05"/>
       <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.4 0.02 0.04"/>
      </geometry>
      <material name="long_bar_texture">
        <color rgba="1. 0. 0. 0.5" />
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.4 0.02 0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="hook_joint2" type="fixed">
    <!-- <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-1.7628" soft_upper_limit="1.7628"/> -->
    <origin rpy="0 0 0" xyz="0.21 0.09 0.0"/>
    <parent link="long_bar"/>
    <child link="short_bar"/>
  </joint>

  <link name="short_bar">
    <contact>
      <lateral_friction value="1"/>
      <rolling_friction value="0.0"/>
      <contact_cfm value="0.0"/>
      <contact_erp value="1.0"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
       <mass value=".05"/>
       <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.02 0.2 0.04"/>
      </geometry>
      <material name="short_bar_texture">
        <color rgba="1. 0. 0. 0.5" />
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <geometry>
	 	    <box size="0.02 0.2 0.04"/>
      </geometry>
    </collision>

  </link>
</robot>

